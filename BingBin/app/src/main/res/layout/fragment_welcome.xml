<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_masterlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.bingbin.bingbinandroid.views.mainActivity.recognitionViews.EcoPointFragment">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/login_bottom_grass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="login_bottom_grass"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottom_grass" />

    <io.bingbin.bingbinandroid.views.BingBinTextView
        android:id="@+id/home_welcome_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="@string/home_homefragment"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/primary_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/login_bottom_grass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <ImageView
        android:id="@+id/welcome_bin_img"
        android:layout_width="212dp"
        android:layout_height="181dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_welcome_bin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_welcome_textview"
        android:contentDescription="image of trashbin for welcome fragment" />

    <io.bingbin.bingbinandroid.views.BingBinButton
        android:id="@+id/welcome_image_btn"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Image"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_bin_img" />

    <io.bingbin.bingbinandroid.views.BingBinButton
        android:id="@+id/welcome_camera_btn"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Camera"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_image_btn" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/welcome_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_addButtonColorNormal="@color/primary_color"
        app:fab_addButtonColorPressed="@color/dark_primary_color"
        app:fab_addButtonPlusIconColor="@color/black"
        app:fab_addButtonSize="normal"
        app:fab_expandDirection="down"
        app:fab_labelStyle="@style/fab_menu_labels_style"
        app:fab_labelsPosition="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/welcome_fab_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/dark_primary_color"
            app:fab_icon="@drawable/ic_person_outline_black_24dp"
            app:fab_size="mini"
            app:fab_title="Changer mon avatar" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/welcome_fab_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/dark_primary_color"
            app:fab_icon="@drawable/ic_info_outline_black_24dp"
            app:fab_size="mini"
            app:fab_title="Information" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/welcome_fab_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/dark_primary_color"
            app:fab_icon="@drawable/ic_logout"
            app:fab_size="mini"
            app:fab_title="DÃ©connexion" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.constraint.ConstraintLayout>
